%header
  %div.navbar.navbar-static-top
    %div.container
      %div.navbar-header
        %button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#app-nav')
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href='/')
          %i.fa.fa-diamond
      %nav.collapse.navbar-collapse#app-nav
        %ul.nav.navbar-nav
          %li= link_to t('app.views.landing.features')
          %li= link_to t('app.views.landing.about')
          %li= link_to t('app.views.landing.pricing')
          %li= link_to t('app.views.landing.blog')
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-expanded='false')
                = current_user.email
                %span.caret
              %ul.dropdown-menu(role='menu')
                %li
                  = link_to edit_user_registration_path do
                    %i.fa.fa-gear
                    = t('app.views.session.account')
                %li
                  = link_to destroy_user_session_path, method: :delete do
                    %i.fa.fa-sign-out
                    = t('app.views.session.sign_out')
          - else
            %li= link_to t('app.views.session.sign_in'), new_user_session_path
            %li.divider-vertical
            %li= link_to t('app.views.session.sign_up'), new_user_registration_path
