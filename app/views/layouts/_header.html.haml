%header.navbar.navbar-default
  %nav.container
    %div.navbar-header
      %a.navbar-brand(href='/')= t('app.site.title')
    %div.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to t('app.views.landing.features')
        %li= link_to t('app.views.landing.about')
        %li= link_to t('app.views.landing.pricing')
        %li= link_to t('app.views.landing.blog')
        - if user_signed_in?
          %li= link_to current_user.email, edit_user_registration_path
          %li= link_to t('app.views.session.sign_out'), destroy_user_session_path, method: :delete
        - else
          %li= link_to t('app.views.session.sign_in'), new_user_session_path
          %li= link_to t('app.views.session.sign_up'), new_user_registration_path
